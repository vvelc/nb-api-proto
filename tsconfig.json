{
  "compilerOptions": {
    "outDir": "./dist",        // Generar archivos compilados en la carpeta dist
    "rootDir": "./src",        // Especificar la carpeta fuente
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],   // Incluir todos los archivos .ts dentro de src
  "exclude": ["node_modules"]
}
